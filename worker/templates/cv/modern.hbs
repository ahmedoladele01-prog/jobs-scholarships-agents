<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <style>
      @page { size: A4; margin: 20mm; }
      body { font-family: Arial, sans-serif; font-size: 11pt; }
      h1 { margin: 0 0 8px 0; font-size: 18pt; }
      hr { margin: 10px 0; }
      .role { font-style: italic; }
      ul { margin: 6px 0 12px 16px; }
    </style>
  </head>
  <body>
    <h1>{{resume.fullName}}</h1>
    <div>{{resume.email}} • {{resume.phone}} • {{resume.location}}</div>
    <div class="role">Target Role: {{targetRole}}</div>
    <hr/>
    <h2>{{resume.headline}}</h2>
    <h3>Experience</h3>
    {{#each resume.experience}}
      <b>{{title}}</b> — {{company}} ({{start}}–{{end}})
      <ul>
        {{#each bullets}}<li>{{this}}</li>{{/each}}
      </ul>
    {{/each}}
  </body>
</html>
